<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin">

    <ImageView
        android:id="@+id/imageview_thumbnail"
        android:layout_width="@dimen/comic_thumbnail_width"
        android:layout_height="@dimen/comic_thumbnail_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/margin"
        android:contentDescription="@string/content_comic_image"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textview_title"
        style="@style/TextAppearance.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin"
        android:layout_toEndOf="@id/imageview_thumbnail"
        android:layout_toRightOf="@id/imageview_thumbnail"
        tools:text="TITLE"/>

    <TextView
        android:id="@+id/textview_price"
        style="@style/TextAppearance.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title"
        android:layout_margin="@dimen/margin"
        android:layout_toEndOf="@id/imageview_thumbnail"
        android:layout_toRightOf="@id/imageview_thumbnail"
        tools:text="PRICE"/>

</RelativeLayout>